<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:padding="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/banner_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:paddingLeft="5dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_home"
            app:tint="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/banner_image"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/banner_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pre-Approved Home Loan"
                android:fontFamily="@font/latoregular"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/banner_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/latoregular"
                android:text="You're eligible for an HDFC Home Loan up to â‚¹50L"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"/>
        </LinearLayout>

        <Button
            android:id="@+id/banner_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply Now"
            android:layout_below="@id/banner_description"
            android:layout_alignStart="@id/banner_description"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:padding="10dp"
            android:textSize="14sp"
            android:fontFamily="@font/latoregular"
            tools:ignore="NotSibling" />
    </LinearLayout>
