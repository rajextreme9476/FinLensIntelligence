<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="24dp"
        android:background="@android:color/white">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Statement"
            android:textColor="#000000"
            android:fontFamily="@font/latoregular"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <!-- Upload Box with Dashed Border -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/dashed_border"
            android:gravity="center"
            android:padding="20dp">

            <!-- Upload Icon -->
            <ImageView
                android:id="@+id/uploadIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_upload"
                android:contentDescription="Upload Icon"
                app:tint="#1A73E8"/>

            <!-- Drag & Drop Text -->
            <TextView
                android:id="@+id/dragText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/latoregular"
                android:layout_below="@id/uploadIcon"
                android:layout_marginTop="16dp"
                android:text="Drag &amp; Drop your PDF/CSV here"
                android:textColor="#6B6B6B"
                android:textSize="14sp"
                android:gravity="center"/>

            <!-- Select File Button -->
            <Button
                android:id="@+id/btn_select_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/dragText"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/latoregular"
                android:text="Select File"
                android:textColor="#FFFFFF"
                android:backgroundTint="#1A73E8"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:textAllCaps="false"/>

            <!-- Supported Formats Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_select_file"
                android:layout_margin="16dp"
                android:text="Supported formats: PDF, CSV (Max size: 10MB)"
                android:textColor="#6B6B6B"
                android:textSize="12sp"
                android:gravity="center"/>
        </RelativeLayout>

        <!-- Analyze Statement Button -->
        <Button
            android:id="@+id/btn_analyze"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Analyze Statement"
            android:layout_marginTop="16dp"
            android:backgroundTint="#D3D3D3"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/latoregular"
            android:textAllCaps="false"
            android:enabled="false"/>
    </LinearLayout>

